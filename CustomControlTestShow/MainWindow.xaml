<Window x:Class="CustomControlTestShow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomControlTestShow"
        xmlns:ctr="clr-namespace:CustomControls;assembly=CustomControls"
        xmlns:conv="clr-namespace:CustomControlTestShow.Converters"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1000">

    <Grid Margin="0,0,10,-6">


        <ctr:HAWE_ItemsControl ItemsSource="{Binding ItemsControlTestModels}">
            <ctr:HAWE_ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Margin="5"
                                BorderBrush="Black"
                                BorderThickness="1">

                        <TextBlock Width="Auto" Margin="10" HorizontalAlignment="Center" Text="{Binding SampleText}" />
                        
                    </Border>
                </DataTemplate>
            </ctr:HAWE_ItemsControl.ItemTemplate>
        </ctr:HAWE_ItemsControl>



    </Grid>
</Window>
